doctype html
html(lang="ru")

  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")

    meta(name="keywords" content="")
    meta(name="description" content="")
    meta(name="robots" content="noindex, nofollow")

    block title

    // Попап галерея
    link(rel="stylesheet", href="css/plugins/fancybox.css")

    // Кастомизируемый скролл
    link(rel="stylesheet", href="css/plugins/jquery.scrollbar.css")

    // Пользовательские подсказки
    link(rel="stylesheet", href="css/plugins/tooltipster.bundle.min.css")

    // Анимация появления блоков при скролле
    link(rel="stylesheet", href="css/plugins/aos.css")

    // Карусель
    link(rel="stylesheet", href="css/plugins/swiper-bundle.min.css")

    // Календарь
    link(rel="stylesheet", href="css/plugins/air-datepicker.css")

    // Попап окна
    link(rel="stylesheet", href="css/plugins/magnific-popup.css")

    // Ползунок
    link(rel="stylesheet", href="css/plugins/nouislider.min.css")

    // Файл стилей
    link(rel="stylesheet" href="css/main.css")

  body 

    block content

    // JQuery
    script(src="js/jquery.min.js")

    //- Подключение pagepiling.css в файле pagepiling.pug

    // Поэкранный скролл
    script(src="js/plugins/jquery.pagepiling.min.js")

    // Попап галерея
    script(src="js/plugins/fancybox.umd.js")

    // Кастомизируемый скролл
    script(src="js/plugins/jquery.scrollbar.min.js")

    // Пользовательские подсказки
    script(src="js/plugins/tooltipster.bundle.min.js")

    // Анимация появления блоков при скролле
    script(src="js/plugins/aos.js")

    // Карусель
    script(src="js/plugins/swiper-bundle.min.js") 

    // Календарь
    script(src="js/plugins/air-datepicker.js") 

    // Попап окна
    script(src="js/plugins/jquery.magnific-popup.min.js") 

    // Ползунок
    script(src="js/plugins/nouislider.min.js") 

    // Маски в инпутах
    script(src="js/plugins/jquery.inputmask.min.js")

    // Автовысота textarea по контенту
    script(src="js/plugins/autosize.min.js")

    // Круговая полоса прогресса
    script(src="js/plugins/circle-progress.min.js" type="module")

    // Скрипты для компонентов bootstrap
    script(src="js/plugins/bootstrap.bundle.min.js") 

    // Липкий сайдбар
    script(src="js/plugins/sticky-sidebar.js") 

